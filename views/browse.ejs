<!doctype html>
<html lang="en">

<head>
    <% include partials/header %>
        <title>Browse</title>
</head>
    
<body>
    <% include partials/navbar %>
    <div class="text-center">
        <button type='button' class='btn btn-primary sort' value="ASC"> Sort Recipes by Ascending Likes</button>
        <button type='button' class='btn btn-primary sort' value="DESC"> Sort Recipes by Descending Likes</button>
    </div>
    <div id="recipes" class="text-center">
        <% for(var i=0; i<results.length; i++) {%>
            <div class='m-5 tileBackground'>
               <button type='button' class='btn btn-primary recipeSummary' value="<%= results[i].recipe_name %>"> <%= results[i].recipe_name %></button>
               <h3 class="text-white">Likes: <%= results[i].likes %></h3>
               <img src="<%= results[i].image %>" width="25%">
            </div>
        <% } %>
    </div>
    
    <% include partials/footer %>
</body>

<script>
    $(document).on('click', '.sort', function(e) {
        $("#recipes").empty();
        $.ajax({
                method: "GET",
                url: "/sortRecipes",
                dataType: "json",
                data: {
                    "order": $(this).attr("value")
                }
            })
            .done(function(results) {
                console.log(results);
                for (var i = 0; i < results.length; ++i){
                    $("#recipes").append("<div class='m-5 tileBackground'>");
                    $("#recipes").append("<button type='button' class='btn btn-primary recipeSummary' value='"+ results[i].recipe_name +"'>" + results[i].recipe_name + "</button>");
                    $("#recipes").append("<h3 class='text-white'>Likes: " + results[i].likes + "</h3>");
                    $("#recipes").append("<img src='" + results[i].image + "'width='25%'>");
                    $("#recipes").append("</div>")
                }
            });
    });
</script>

</html>